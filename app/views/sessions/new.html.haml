= form_for(:session, :url => sessions_path, :html => {:class =>'form-horizontal'}) do |f|
  %fieldset
    %legend
      %h1
        .inner-title
          Sign In
    .control-group
      = f.label :email,:class => "control-label"
      .controls
        = f.text_field :email,:class => "input-middle",:placeholder =>  "***@zte.com.cn"
    .control-group
      = f.label :password,:class => "control-label"
      .controls
        = f.password_field :password,:class => "input-middle",:placeholder => "********"
    .control-group
      %label.control-label
        PressButtom
      .controls
        = f.submit "Sign in", :class => "btn btn-primary"
    .control-group
      %label.control-label
        New user?
      .controls
        = link_to "Sign up now!", signup_path,
          :class => "btn btn-warning"
