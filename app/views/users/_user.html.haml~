%tr
  %td
    = gravatar_for user, :size => 40
  %td
    = link_to user do
      %h4
        %em.pull-left
          = user.name
  %td
    - if current_user.admin? 
      = link_to  "delete", user,
        :confirm => "are you sure?",
        :method => :delete,
        :class => "btn btn-danger"
  %td
    - if user.auth? 
      = link_to "Unauth",auth_user_path(user),	
        :confirm =>"are you sure?",
        :method => :post,
        :class => "btn btn-inverse"
    - else 
      = link_to "auth",auth_user_path(user),
        :confirm => "are you sure", 
        :method => :post,
        :class => "btn btn-success"
          
  %td
    - if  user.auth?
      %span.label.label-success
        has Auth
    - else 
      %span.label
        Not Auth